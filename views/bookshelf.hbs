<body>

    <header>
        <h1><a href="/">No Late Fees</a></h1>
        <ul class="nav">
            <li><a href="/book/new">Add a Book</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/bookshelf">Bookshelf</a></li>
        </ul>
    </header>

    <div class="libraryWrapper">
    {{#each events}}
    
        <p class="entry">
            {{#if isBook}}
                <a class="title {{loanClass}}" href="/book?name={{title}}"><strong>{{title}}</strong></a> by <a class="author" href="/author?name={{author}}">{{author}}</a>.
                
            {{else}}
                {{#if isLoan}}
                    <a class="title {{book.loanClass}}" href="/book?name={{book.title}}"><strong>{{book.title}}</strong></a> by <a class="author" href="/author?name={{book.author}}">{{book.author}}</a>.
                  
                {{else}}
                    <a class="title {{book.loanClass}}" href="/book?name={{book.title}}"><strong>{{book.title}}</strong></a> by <a class="author" href="/author?name={{book.author}}">{{book.author}}</a>.
                   
                {{/if}}
            {{/if}}
        </p>
  
    {{/each}}
    </div><!--END libraryWrapper-->


<footer>
    <ul class="one-fourth">
        <li><strong>No Late Fees</strong></li>
        <li><a href="http://art.yale.edu" target="_blank">Yale School of Art</a></li>
    </ul>
   
    <ul class="one-fourth">
        <li><a href="mailto:benjamin.d.lee@yale.edu" target="_blank">Contact</a></li>
        <li>&copy; 2015</li>
    </ul>
</footer>

</body>