
<body>

    <header>
        <h1><a href="/">No Late Fees&trade;</a></h1>
        <ul class="nav">
            <li><a href="/book/new">Add a Book</a></li>
            <li><a href="/about">About this site</a></li>
        </ul>
    </header>

     <div class="libraryWrapper">
    {{#each events}}
    
   
   
        <p class="entry">
                {{#if isBook}}
                    <a class="student" href="/student?name={{student}}">{{student}}</a> added the book <a class="title" href="/book?name={{title}}"><strong>{{title}}</strong></a> by <a class="author" href="/author?name={{author}}">{{author}}</a>
                    on <span class="created">{{created}}</span>.
                    <a href="/loan/create?book_id={{id}}" class="borrow">Borrow</a>
                {{else}}
                    <a class="student" href="/student?name={{student}}">{{student}}</a> borrowed the book <a class="title" href="/book?name={{book.title}}"><strong>{{book.title}}</strong></a> by <a class="author" href="/author?name={{book.author}}">{{book.author}}</a>
                    on <span class="created">{{created}}</span>.<a href="/loan/create?book_id={{id}}" class="borrow">Borrow</a>
                {{/if}}
        </p>
  
    {{/each}}
    </div><!--END libraryWrapper-->


<footer>
